<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="0dip" />
            <stroke android:width="1dip" android:color="#00f93364" />
            <gradient android:angle="-90" android:startColor="#4800ff" android:endColor="#981100ff"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="0dip" />
            <stroke android:width="1dip" android:color="#00c4244c" />
            <solid android:color="#a6043aff"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="0dip" />
            <stroke android:width="1dip" android:color="#00c4244c" />
            <gradient android:angle="-90" android:startColor="#af1900ff" android:endColor="#c6555bff" />
        </shape>
    </item>
</selector>